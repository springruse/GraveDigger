  <!-- MINING PICK -->
  <!-- ============================================ -->
	<ThingDef ParentName="BaseMeleeWeapon_Sharp_Quality">
		<defName>GD_PickaxeSmall</defName>
		<label>mining pick</label>
		<description>A small pickaxe used by soldiers, civilians, and bandits alike. Familiar to any person that exists on any rimworld. \n\nAlthough it is a simple tool, it has been used ever since everyone went underground. Better than digging or mining with your hands. \n\nHas breach tool capabilities, being stronger than a breach axe.</description>
		<possessionCount>1</possessionCount>
		<stuffCategories>
			<li>Metallic</li>
		</stuffCategories>
		<costStuffCount>60</costStuffCount>
		<defaultStuff>Steel</defaultStuff>
		<graphicData>
			<texPath>Things/Item/Equipment/WeaponMelee/Mace</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<techLevel>Industrial</techLevel>
		<statBases>
			<WorkToMake>5000</WorkToMake>
			<Mass>1.0</Mass>
			<MaxHitPoints>100</MaxHitPoints>
		</statBases>
		<equippedStatOffsets>
			<MiningSpeed>0.30</MiningSpeed>
			<MiningYield>0.10</MiningYield>
		</equippedStatOffsets>
		<equippedAngleOffset>-65</equippedAngleOffset>
		<tools>
			<li>
				<label>handle</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>6</power>
				<cooldownTime>1.5</cooldownTime>
			</li>
			<li>
				<label>pick</label>
				<capacities>
					<li>Stab</li>
				</capacities>
				<power>14</power>
				<cooldownTime>1.75</cooldownTime>
				<armorPenetration>0.15</armorPenetration>
			</li>
			<li>
				<label>head</label>
				<capacities>
					<li>Demolish</li>
				</capacities>
				<power>18</power>
				<cooldownTime>1.25</cooldownTime>
			</li>
		</tools>
		<recipeMaker>
			<researchPrerequisite>Smithing</researchPrerequisite>
			<skillRequirements>
				<Crafting>2</Crafting>
			</skillRequirements>
			<displayPriority>409</displayPriority>
